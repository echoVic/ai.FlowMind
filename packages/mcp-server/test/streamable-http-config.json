{
  "mcpServers": {
    "flowmind-streamable-http": {
      "command": "node",
      "args": ["dist/index.js", "--http"],
      "cwd": "../",
      "env": {
        "MCP_HTTP_ENABLED": "true",
        "MCP_HTTP_PORT": "3001",
        "MCP_HTTP_CORS_ORIGINS": "*",
        "MCP_HTTP_CORS_CREDENTIALS": "false"
      }
    }
  }
}
