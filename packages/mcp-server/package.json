{
  "name": "flowmind-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for Mermaid diagram generation and validation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-mermaid": "dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --target node18 --clean",
    "dev": "tsup src/index.ts --format esm --target node18 --watch",
    "start": "node dist/index.js",
    "start:http": "node dist/index.js --http",
    "dev:http": "MCP_HTTP_ENABLED=true tsup src/index.ts --format esm --target node18 --watch --onSuccess \"node dist/index.js --http\"",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:http": "chmod +x test/test-streamable-http.sh && ./test/test-streamable-http.sh",
    "inspector:http": "npx @modelcontextprotocol/inspector --config test/streamable-http-config.json --server flowmind-streamable-http",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build"
  },
  "keywords": [
    "mcp",
    "mermaid",
    "diagram",
    "ai",
    "claude"
  ],
  "author": "FlowMind",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/flowmind/mcp-server.git"
  },
  "homepage": "https://github.com/flowmind/mcp-server#readme",
  "bugs": {
    "url": "https://github.com/flowmind/mcp-server/issues"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@mermaid-js/parser": "^0.6.1",
    "@modelcontextprotocol/sdk": "^1.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.1",
    "@types/node": "^20.11.24",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
